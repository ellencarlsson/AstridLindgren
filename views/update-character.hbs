<h1 class="title has-text-centered pt-6">
        Update {{character.name}}{{newName}}
</h1> 

<div class="columns is-centered">
    <div class="column is-hidden-mobile">
        {{#if errors.length}}
            <div class="column box is-9 is-centered ml-6" style="color: red;">
                <div class="subtitle" style="color: red;">Could not update movie because:</div>
                <ul>
                    {{#each errors}}
                    <li>â€¢ {{this}}</li>
                    {{/each}}
                </ul>
            </div>
            {{else}}
        <section class="container">
            <div class="has-text-centered px-6 my-6">                                            
                <img src="/images/img_ovrigt/karlssonOvrigt .jpeg" >                                      
            </div>
        </section>
        {{/if}}
    </div>

    <div class="column is-5">
        <div class="columns">
            <div class="column">
                <div class="box ">
                    <form method="POST"  action="/characters/update/{{character.id}}{{id}}"  enctype="multipart/form-data" onkeydown="return event.key != 'Enter';">
                        <div class="mb-3">
                            Name: <input type="string" name="newName" placeholder="Type name" class="input" value="{{character.name}}{{newName}}">
                        </div>
                         <div class="mb-3 ">
                            Description: <textarea class="input textarea" name="newDescription" rows="3" placeholder="Type description">{{character.description}}{{newDescription}}</textarea>                        
                        </div>  

                        <div class="columns is-left mb-0">
                            <div class="column is-7 ">                       
                                Image:  <input type="file" name="newImageName" accept="image/png, image/jpeg" placeholder="Type description" class="input"/> 
                                <div class="help">
                                    Allowed file types are: jpeg, jpg
                                </div>                        
                            </div>  
                            <div class="column is-5 mt-1">               
                                <br>    
                                <input type="checkbox" name="checkImg" value="true" >
                                Use the standard image
                            </div>      
                        </div>

                        <div class="columns is-left mb-0">
                            <div class="column">
                                <img class="image is-64x64" src="/images/img_characters/{{character.imageName}}{{newImageName}}" alt="">
                                <div class="help">
                                    Current image
                                </div>
                            </div> 
                            <div class="column is-5 mt-1">                                                 
                                <input type="checkbox" name="checkCurrentImg" checked="true" value="{{character.imageName}}{{newImageName}}" >
                                Use the current image
                            </div>      
                        </div>

                        <div class="columns is-left mb-0">
                            <div class="column is-7 ">                       
                            Theme song: <input type="file" name="newSoundName" accept="audio/mp3" placeholder="Type description" class="input"/>       
                                <div class="help">
                                    Allowed file types are: mp3
                                </div>                        
                            </div>  
                            <div class="column is-5 mt-1">               
                                <br>    
                                <input type="checkbox" name="checkSnd" value="true">
                                    Use standard theme song 
                                {{!-- <span class="icon"><img style="border-radius: 50%;" src="/images/img_characters/noPfp.jpeg" alt=""></span>    --}}
                            </div>      
                        </div>                      
                        <div class="columns is-left mb-0">
                            <div class="column">
                                <audio controls autoplay>
                                    <source src="/sounds/{{character.soundName}}{{newSoundName}}" type="audio/mp3">
                                </audio>
                                <div class="help">
                                    Current sound
                                </div>
                            </div> 
                            <div class="column is-5 mt-1">                             
                                <input type="checkbox" name="checkCurrentSnd" checked="true" value="{{character.soundName}}{{newSoundName}}" >
                                Use the current sound
                            </div>      
                        </div>

                        <div class="column has-text-centered">
                            <button class="button is-medium is-responsive mt-6">
                                Update character
                            </button>
                        </div>  
                    </form>
                </div>
            </div> 
        </div>  
    </div>
    <div class="column is-hidden-mobile">
        <section class="container">
            <div class="has-text-centered px-6 mt-6">                                            
                <img src="/images/img_ovrigt/pippiOvrigt .jpeg" >                                      
            </div>
        </section>
    </div>
</div>

{{#if errors.length}}
    <p>coudnt finish because:</p>
    <ul>
        {{#each errors}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
{{/if}} 